<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<Version>0.10.0</Version>
		<IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
	</PropertyGroup>

	<PropertyGroup>
		<Authors>alexalok</Authors>
		<Description>App Store Server Notifications V2 for .NET</Description>
		<Copyright>Copyright (c) alexalok 2022-2025</Copyright>
		<PackageProjectUrl>https://github.com/alexalok/AppStoreServerNotificationsV2</PackageProjectUrl>
		<RepositoryUrl>https://github.com/alexalok/AppStoreServerNotificationsV2</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageTags>appstore server notifications v2</PackageTags>
		<PackageLicenseExpression>AGPL-3.0-or-later</PackageLicenseExpression>
		<PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
		<PackageReleaseNotes>
			* Added properties related to refund transactions
		</PackageReleaseNotes>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="InternalsVisibleTo.MSBuild" Version="1.0.4">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
		<PackageReference Include="JWT" Version="10.1.1" />
	</ItemGroup>

	<ItemGroup>
		<InternalsVisibleToSuffix Include=".Tests" />
	</ItemGroup>
	
</Project>